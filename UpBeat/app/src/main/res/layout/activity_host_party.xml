<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".HostParty">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/host_background"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shutItView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-140dp"
        android:src="@drawable/shutdown_button"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/pauseButton"
        android:src="@drawable/pause_button"
        android:background="@null"
        android:scaleType="fitXY"
        android:clickable="true"
        android:layout_alignTop="@+id/shutItView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/rightNext"
        android:src="@drawable/next_arrow"
        android:layout_alignBottom="@+id/pauseButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-25dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/leftnext"
        android:layout_alignBottom="@+id/pauseButton"
        android:layout_marginBottom="-25dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/next_arrow"
        android:rotation="180"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/albumCover"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/pauseButton"
        android:layout_marginBottom="160dp"
        android:src="@drawable/album_cover" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You/Me/Evolution - The Amplifetes"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/shutItView"
        android:layout_marginTop="-10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="//Trojanhacks Turnup"
        android:id="@+id/textView2"
        android:layout_above="@+id/albumCover"
        android:layout_alignBottom="@+id/shutItView"
        android:layout_marginBottom="720dp"
        android:layout_centerHorizontal="true"
        android:textColor="#444444" />

    <Button
        android:layout_width="1080dp"
        android:layout_height="70dp"
        android:id="@+id/button4"
        android:layout_below="@+id/leftnext"
        android:layout_toStartOf="@+id/pauseButton"
        android:layout_marginTop="21dp"
        android:layout_alignRight="@+id/rightNext"
        android:layout_alignEnd="@+id/rightNext"
        android:layout_alignParentStart="true"
        android:background="#00000000"
        android:allowUndo="true" />


</RelativeLayout>
